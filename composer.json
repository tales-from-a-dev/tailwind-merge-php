{
    "name": "tales-from-a-dev/tailwind-merge-php",
    "description": "TailwindMerge for PHP merges multiple Tailwind CSS classes by automatically resolving conflicts between them",
    "keywords": ["php", "tailwindcss", "merge", "classes"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sandro Gehri",
            "email": "sandrogehri@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89",
        "nunomaduro/collision": "^7.10",
        "pestphp/pest": "^v2.24.0",
        "pestphp/pest-plugin-arch": "^2.6",
        "pestphp/pest-plugin-mock": "^2.0.0",
        "pestphp/pest-plugin-type-coverage": "^2.8",
        "phpstan/phpstan": "^1.10.55",
        "symfony/var-dumper": "^6.4.2"
    },
    "autoload": {
        "psr-4": {
            "TalesFromADev\\TailwindMerge\\": "src/"
        },
        "files": [
            "src/TailwindMerge.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "TalesFromADev\\TailwindMerge\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test:lint": "vendor/bin/php-cs-fixer fix -v --dry-run",
        "test:lint:fix": "vendor/bin/php-cs-fixer fix -v",
        "test:types": "phpstan analyse --ansi",
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:pest": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:type-coverage",
            "@test:pest"
        ]
    }
}
