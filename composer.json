{
  "name": "tales-from-a-dev/tailwind-merge-php",
  "description": "TailwindMerge for PHP merges multiple Tailwind CSS classes by automatically resolving conflicts between them",
  "keywords": [
    "php",
    "tailwindcss",
    "merge",
    "classes"
  ],
  "homepage": "https://github.com/tales-from-a-dev/tailwind-merge-php",
  "license": "MIT",
  "authors": [
    {
      "name": "Sandro Gehri",
      "email": "sandrogehri@gmail.com"
    },
    {
      "name": "Romain Monteil",
      "email": "monteil.romain@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "psr/simple-cache": "^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.89",
    "phpstan/phpstan": "^2.1"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "autoload": {
    "psr-4": {
      "TalesFromADev\\TailwindMerge\\": "src/"
    },
    "files": [
      "src/TailwindMerge.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "TalesFromADev\\TailwindMerge\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test:lint": "vendor/bin/php-cs-fixer fix -v --dry-run",
    "test:lint:fix": "vendor/bin/php-cs-fixer fix -v",
    "test:types": "vendor/bin/phpstan analyse --memory-limit 256M --ansi",
    "test:types:baseline": "vendor/bin/phpstan analyse --memory-limit 256M --generate-baseline --allow-empty-baseline",
    "test:type-coverage": "pest --type-coverage --min=100",
    "test:pest": "pest --colors=always",
    "test": [
      "@test:lint",
      "@test:types",
      "@test:type-coverage",
      "@test:pest"
    ]
  }
}
